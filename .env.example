# Tikun Olam Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# AI API KEYS (Required)
# ============================================================================

# Google Gemini API Key (for Western perspective analysis)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Key (for synthesis and advanced reasoning)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API Key (for Eastern perspective analysis in BinahSigma)
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API Key (optional, fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# TIKUN CONFIGURATION
# ============================================================================

# Environment (development, staging, production)
TIKUN_ENV=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Output directory for results
OUTPUT_DIR=./results

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Default models for each Sefirah
KETER_MODEL=gemini-2.0-flash-exp
CHOCHMAH_MODEL=claude-3-5-sonnet-20241022
BINAH_WEST_MODEL=gemini-2.0-flash-exp
BINAH_EAST_MODEL=deepseek-chat
CHESED_MODEL=gemini-2.0-flash-exp
GEVURAH_MODEL=gemini-2.0-flash-exp
TIFERET_MODEL=claude-3-5-sonnet-20241022
NETZACH_MODEL=gemini-2.0-flash-exp
HOD_MODEL=gemini-2.0-flash-exp
YESOD_MODEL=claude-3-5-sonnet-20241022
MALCHUT_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# PERFORMANCE & LIMITS
# ============================================================================

# API request timeout (seconds)
API_TIMEOUT=120

# Maximum retries for failed API calls
MAX_RETRIES=3

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# Enable caching
ENABLE_CACHE=true

# Cache TTL (seconds)
CACHE_TTL=3600

# ============================================================================
# BINAHSIGMA CONFIGURATION
# ============================================================================

# BinahSigma activation threshold (% geopolitical keywords)
BINAH_SIGMA_THRESHOLD=0.15

# Minimum bias delta for "high divergence" (%)
BINAH_HIGH_DIVERGENCE_THRESHOLD=40

# ============================================================================
# API SERVER (if using FastAPI)
# ============================================================================

# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# Enable API docs
API_DOCS_ENABLED=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=9090

# Enable distributed tracing
ENABLE_TRACING=false

# ============================================================================
# SECURITY
# ============================================================================

# API authentication token (if needed)
API_AUTH_TOKEN=

# Enable request validation
STRICT_VALIDATION=true

# Maximum scenario text length (characters)
MAX_SCENARIO_LENGTH=50000
